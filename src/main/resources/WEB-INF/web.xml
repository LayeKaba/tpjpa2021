<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

  <!-- la déclaration de la servlet -->
  <servlet>
    <servlet-name>CompteServlet</servlet-name>
    <!-- le nom de la classe implémentant la servlet (précédé du nom du package) -->
    <servlet-class>fr.istic.taa.servlet.CompteServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>CreneauServlet</servlet-name>
    <!-- le nom de la classe implémentant la servlet (précédé du nom du package) -->
    <servlet-class>fr.istic.taa.servlet.CompteServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PatientServlet</servlet-name>
    <!-- le nom de la classe implémentant la servlet (précédé du nom du package) -->
    <servlet-class>fr.istic.taa.servlet.PatientServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RendezVousServlet</servlet-name>
    <!-- le nom de la classe implémentant la servlet (précédé du nom du package) -->
    <servlet-class>fr.istic.taa.servlet.RendezVousServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProServlet</servlet-name>
    <!-- le nom de la classe implémentant la servlet (précédé du nom du package) -->
    <servlet-class>fr.istic.taa.servlet.ProServlet</servlet-class>
  </servlet>
  

  <!-- l'association de la servlet avec un motif d'URL -->
  <servlet-mapping>
    <servlet-name>CreneauServlet</servlet-name>
    <!-- le motif d'url (par exemple *.html ou /servlet) -->
    <url-pattern>/CreneauServlet</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>CompteServlet</servlet-name>
    <!-- le motif d'url (par exemple *.html ou /servlet) -->
    <url-pattern>/CompteServlet</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>PatientServlet</servlet-name>
    <!-- le motif d'url (par exemple *.html ou /servlet) -->
    <url-pattern>/PatientServlet</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>RendezVousServlet</servlet-name>
    <!-- le motif d'url (par exemple *.html ou /servlet) -->
    <url-pattern>/RendezVousServlet</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>ProServlet</servlet-name>
    <!-- le motif d'url (par exemple *.html ou /servlet) -->
    <url-pattern>/ProServlet</url-pattern>
  </servlet-mapping>
  

</web-app>